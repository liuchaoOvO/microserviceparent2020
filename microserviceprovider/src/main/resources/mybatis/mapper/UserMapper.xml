<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lc.dao.UserDao">

    <select id="getUser" resultType="SysUser" parameterType="String">
        select id,password,username from SYS_user where ID=#{id}
    </select>

    <select id="getUsers" resultType="SysUser">
        select id,password,username from SYS_user
    </select>

    <insert id="addUser" parameterType="SysUser">
        insert into SYS_user(id,username,password,status,last_ver) values(#{id}, #{username}, #{password},#{status},#{last_ver})
    </insert>

</mapper>
